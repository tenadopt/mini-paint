{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "jsx": "react",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "baseUrl": "src",
    "paths": {
      "app/*": ["app/*"],
      "features/*": ["features/*"],
      "entities/*": ["entities/*"],
      "shared/*": ["shared/*"],
      "pages/*": ["pages/*"],
      "widgets/*": ["widgets/*"]
    }
  },
  "include": ["src", "webpack.config.ts", ".eslintrc.js", "prettier.config.js"],
  "exclude": ["node_modules"]
}
